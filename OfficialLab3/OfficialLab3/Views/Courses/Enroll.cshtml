@model OfficialLab3.Models.Course


@{
    ViewData["Title"] = "Enroll";
    

}

//I am trying to add students to the course 

<h1>Enroll</h1>

<h4>Add Students to your @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Enroll">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Students" class="control-label"></label>
                <select asp-for="Students" class="form-control" asp-items="@(new SelectList(Model.Students, nameof(Student.Id), nameof(Student.Name)))"></select>
                <span asp-validation-for="Students" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


